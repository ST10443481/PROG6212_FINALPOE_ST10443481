@model IEnumerable<CMCS.Web.Models.Claim>
@using CMCS.Web.Helpers

@{
    ViewData["Title"] = "Pending Claims for Approval";

    var user = Context.Session.GetObject<CMCS.Web.Models.User>("User");
}

<h2 class="mb-3">Claims Awaiting Action</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">There are no claims requiring your attention.</div>
}
else
{
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Document</th>
                <th style="width: 250px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Lecturer</td>
                    <td>@claim.HoursWorked</td>
                    <td>R @claim.HourlyRate</td>
                    <td><strong>R @(claim.HoursWorked* claim.HourlyRate)</strong></td>

                    <td>
                        @switch (claim.Status)
                        {
                            case CMCS.Web.Models.ClaimStatus.PendingVerification:
                                <span class="badge bg-warning text-dark">Pending Verification</span>
                                break;

                            case CMCS.Web.Models.ClaimStatus.Verified:
                                <span class="badge bg-info text-dark">Verified</span>
                                break;

                            case CMCS.Web.Models.ClaimStatus.PendingFinalApproval:
                                <span class="badge bg-primary">Pending Final Approval</span>
                                break;

                            case CMCS.Web.Models.ClaimStatus.Approved:
                                <span class="badge bg-success">Approved</span>
                                break;

                            case CMCS.Web.Models.ClaimStatus.Rejected:
                                <span class="badge bg-danger">Rejected</span>
                                break;

                            case CMCS.Web.Models.ClaimStatus.Settled:
                                <span class="badge bg-secondary">Settled</span>
                                break;
                        }
                    </td>

                    <td>@claim.Notes</td>

                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentFileName))
                        {
                            <a href="/uploads/@claim.DocumentFileName" target="_blank" class="btn btn-sm btn-outline-primary">
                                View File
                            </a>
                        }
                    </td>

                    <td>

                        <!-- -------------------- -->
                        <!-- COORDINATOR ACTIONS -->
                        <!-- -------------------- -->
                        @if (user.Role == "Coordinator" || user.Role == "HR")
                        {
                            if (claim.Status == CMCS.Web.Models.ClaimStatus.PendingVerification)
                            {
                                <a href="/Approvals/Verify/@claim.Id" class="btn btn-sm btn-success me-1">Verify</a>
                                <a href="/Approvals/Reject/@claim.Id" class="btn btn-sm btn-danger">Reject</a>
                            }
                        }

                        <!-- ---------------- -->
                        <!-- MANAGER ACTIONS -->
                        <!-- ---------------- -->
                        @if (user.Role == "Manager" || user.Role == "HR")
                        {
                            if (claim.Status == CMCS.Web.Models.ClaimStatus.PendingFinalApproval)
                            {
                                <a href="/Approvals/Approve/@claim.Id" class="btn btn-sm btn-primary me-1">Approve</a>
                            }

                            if (claim.Status == CMCS.Web.Models.ClaimStatus.Approved)
                            {
                                <a href="/Approvals/Settle/@claim.Id" class="btn btn-sm btn-dark">Settle</a>
                            }
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
}